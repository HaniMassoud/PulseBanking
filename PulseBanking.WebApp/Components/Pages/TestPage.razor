@page "/test"
@rendermode InteractiveServer

<h1>Test Page</h1>

<div class="container">
    <div class="mb-3">
        <input type="text" @onchange="UpdateText" class="form-control" />
    </div>

    <button @onclick="IncrementCount" class="btn btn-primary">
        Click Count: @currentCount
    </button>

    <div class="alert alert-info mt-3">
        <p>Last text entered: @currentText</p>
        <p>Button clicks: @currentCount</p>
        <p>Last update: @DateTime.Now.ToString("HH:mm:ss.fff")</p>
    </div>
</div>

@code {
    private int currentCount = 0;
    private string currentText = "";

    private void UpdateText(ChangeEventArgs e)
    {
        currentText = e.Value?.ToString() ?? "";
        Console.WriteLine($"Text updated to: {currentText}");
    }

    private void IncrementCount()
    {
        currentCount++;
        Console.WriteLine($"Count is now: {currentCount}");
    }
}